from moviepy.editor import *
import numpy as np

# íŒŒì¼ ê²½ë¡œ ì„¤ì • (íŒŒì¼ ì´ë¦„ì€ ë„¤ PCì— ë§ê²Œ ì¡°ì •)
character_img_path = "file-LeYGcgfUw8euCsuZ1NuJ3m.png"  # ìºë¦­í„° ì´ë¯¸ì§€
bg_image_path = "A_2D_digital_illustration_depicts_a_Roblox-style_3.png"  # ë°°ê²½ ì´ë¯¸ì§€
music_path = "ìŠˆíŒ…ìŠ¤íƒ€ì±Œë¦°ì§€ğŸ’«#shorts.mp3"  # ë¦¬ë¯¹ìŠ¤ ìŒì•…

# ì˜ìƒ ì„¤ì •
duration = 20  # ì˜ìƒ ê¸¸ì´ (ì´ˆ)
video_size = (720, 1280)  # ì„¸ë¡œ ì˜ìƒ ì‚¬ì´ì¦ˆ

# í´ë¦½ ìƒì„±
bg_clip = ImageClip(bg_image_path).set_duration(duration).resize(height=1280).set_position("center")
character_clip = (
    ImageClip(character_img_path)
    .set_duration(duration)
    .resize(height=600)
    .set_position(("center", "center"))
)

# ì˜¤ë””ì˜¤ í´ë¦½ (20ì´ˆë§Œ ì‚¬ìš©)
audio_clip = AudioFileClip(music_path).subclip(0, duration)

# ìµœì¢… ì˜ìƒ í•©ì„±
final_video = CompositeVideoClip([bg_clip, character_clip]).set_duration(duration).resize(video_size)
final_video = final_video.set_audio(audio_clip)

# ì˜ìƒ íŒŒì¼ë¡œ ì €ì¥
final_video.write_videofile("ìŠˆíŒ…ìŠ¤íƒ€ì±Œë¦°ì§€_ê²œìš±_ìµœì¢….mp4", fps=30)
